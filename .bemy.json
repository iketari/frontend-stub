{
	"file-types": {
		"css": {
			"suffix": ".css",
			"shortcuts": [ "c", "css" ],
			"rename": ".{{bemNode}}",
			"template": "./bem/stub/style.css"
		},
		"xml": {
			"suffix": ".xml",
			"shortcuts": [ "x", "xml" ],
			"rename": ".{{bemNode}}",
			"template": "./bem/stub/template.xml"
		}
	},
	"editor-open-command": "wstorm {{file-path}}:{{line-number}}",
	"bem": {
		"separators": {
			"elem": "__",
			"mod": "_",
			"modVal": "_"
		},
		"allowed-name-symbols-regexp": "[-a-z0-9]"
	},
	"deps_task": {
		"files": [ "css" ]
	},
	"debug": false,
	"checkForUpdate": true
}